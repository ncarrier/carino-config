CROSS_PKG_CONFIG=${WORKSPACE_DIR}/tools/wrapped-pkg-config

KERNEL_EXTRA_ENV="ARCH=arm CROSS_COMPILE=${TOOLCHAIN_PREFIX}- LOADADDR=0x40008000"
